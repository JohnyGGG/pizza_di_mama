 const checkIfEmpty = (option) => {
     let checker = false;
     if(option == 'res'){
        if(!$('#reservation-name').val()){
            $('#reservation-name').addClass('required');
            $('#reservation-name').attr('placeholder','This field is required!');
            checker = true;
        }
